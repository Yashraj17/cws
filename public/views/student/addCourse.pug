extends base.pug
block content 
    .container.mt-3
        .row 
            .col-3 
                .card.shadow 
                    img.card-img-top(src="https://p.kindpng.com/picc/s/451-4517876_default-profile-hd-png-download.png",alt="")
                    .card-body 
                        h2.card-title= user.name
                        h6= user.email
            .col-9 
                .container 
                    .card 
                        .card-body 
                            form(action="", method="post")
                                .mb-2
                                    label(for="") Select Course 
                                    select(name="courseId").form-select
                                        each x in course
                                            option(value=`${x._id}`)= x.title 
                                .mb-2
                                    input.btn.btn-success(type="submit")